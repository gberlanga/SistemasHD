@using SistemasHD.Models

@{
    ViewBag.Title = "Cambio de Usuario";
    var ticket = (Ticket)ViewData["Task"];
}

<h2>Cambiar Usuario</h2>

@using (Html.BeginForm("ChangeUser", "Ticket", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <input type="hidden" name="id" value="@ticket.Id" />


    <div class="container">
        <div class="row">
            <div class='col-sm-6'>
                <div class="form-group">
                    <label class="control-label col-md-2">Usuario</label>
                    <div class="col-md-10">
                        @Html.DropDownList("User", null, htmlAttributes: new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <input type="submit" value="Actualizar" class="btn btn-success" />
            </div>
        </div>
    </div>
}
