<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Titles</title>
    @Styles.Render("~/Content/css")
    <link href="~/Scripts/jquery-ui.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href=@Url.Action("/TERRA.ico") type="image/x-icon" />
    @*<link rel="icon" href= @Url.Action("~/TERRA.ico") />*@

</head>
<body>
    <div class="navbar navbar-light navbar-fixed-top" style="background-color: #004987" ;>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("#TeamSistemas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })
            </div>
            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav navbar-light">
                    <li>@Html.ActionLink("Mis Tareas", "Index", "Ticket", new { filter = 0}, new { @style = "color:white" })</li>
                    <li><a href="http://189.212.216.194/helpdesk" style="color:white">HelpDesk</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TerraRegia&trade;</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>